## Pull base image
#FROM python:3.7
FROM python:3.7-alpine3.7

MAINTAINER  "Moaaz Noaman" <moaz.refat@hotmail.com> 
ENV HOME="/home/moaaz"
RUN adduser -D moaaz 
USER moaaz

COPY . /home/moaaz/app
WORKDIR /home/moaaz/app

RUN chown moaaz:moaaz /home/moaaz/app
RUN pip install -r requirements.txt --no-cache-dir
EXPOSE 8080
ENTRYPOINT ["python"]
CMD ["$HOME/app.py"]
